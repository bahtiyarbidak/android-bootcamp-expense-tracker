<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Basic styling for the buttons. -->
    <style name="Buttons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlHighlight">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card View Style. -->
    <style name="CustomCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>